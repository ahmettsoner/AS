{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "program": "${workspaceFolder}/src/main.ts",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "sourceMaps": true,
        "args": [
          "phase",
          "test",
          "alpha",
          "1.0.0"
        ],
        "resolveSourceMapLocations": [
          "${workspaceFolder}/dist/**/*.js",
          "${workspaceFolder}/dist/**/*.js.map"
        ]
      }
    ]
}